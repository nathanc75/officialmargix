modules = ["nodejs-20", "web"]
[agent]
expertMode = true
integrations = ["javascript_object_storage:2.0.0", "javascript_openai_ai_integrations:2.0.0"]

[nix]
channel = "stable-25_05"

[deployment]
deploymentTarget = "static"
build = ["npm", "run", "build"]
publicDir = "dist"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node server/index.js & npm run dev"
waitForPort = 5000

[[ports]]
